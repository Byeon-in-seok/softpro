<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".activity.reset_password"/>
        <activity android:name=".activity.profile" />
        <activity android:name=".activity.addinfo" />
        <activity android:name=".activity.notice_box" />
        <activity android:name=".activity.notice_board" />
        <activity android:name=".activity.delivery_status" />
        <activity android:name=".activity.SignUpActivity" />
        <activity android:name=".activity.CameraActivity" />
        <activity android:name=".fragment.Camera2BasicFragment" />
        <activity android:name=".activity.GalleryActivity" />
        <activity android:name=".activity.BasicActivity" />
        <activity android:name=".activity.WritePostActivity" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoginActivity" />
    </application>

</manifest>