<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_usernickname"
            android:layout_width="91dp"
            android:layout_height="39dp"
            android:text="user_id" />

        <TextView
            android:id="@+id/textView_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="거래점수" />
    </LinearLayout>

    <TableLayout
        android:layout_width="303dp"
        android:layout_height="369dp"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="132dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_board"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/ic_board" />

            <Button
                android:id="@+id/button_note"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/ic_chat" />
        </TableRow>

        <TableRow android:layout_width="0dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmjua"
                android:text="게시판"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmjua"
                android:text="채팅"
                android:textAlignment="center"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_delivery"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/ic_delivery"
                tools:layout_editor_absoluteX="38dp"
                tools:layout_editor_absoluteY="179dp" />

            <Button
                android:id="@+id/button_profile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/ic_profile" />
        </TableRow>

        <TableRow android:layout_width="0dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmjua"
                android:text="택배현황"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmjua"
                android:text="회원정보"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="18sp" />
        </TableRow>


    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>